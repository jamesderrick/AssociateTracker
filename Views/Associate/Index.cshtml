@model IEnumerable<Associate>
@{
    ViewData["Title"] = "Associates";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Associates List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Associate" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Associate
            </a>
        </div>
    </div>
</div>

<br/>

<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Associate</th>
            <th>Placement</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var associate in Model)
        {
            <tr>
                <td>@associate.Id</td>
                <td>@associate.FirstName @associate.LastName</td>
                <td></td>
                <td class="text-end">
                    <div class="w-50 btn-group">
                        <a asp-controller="Associate" asp-action="Edit" asp-route-id="@associate.Id" class="btn btn-primary mx-2 w-50">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Associate" asp-action="Delete" asp-route-id="@associate.Id" class="btn btn-danger mx-2 w-50">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count() == 0)
{
    <div>
        No results to display
    </div>
}

