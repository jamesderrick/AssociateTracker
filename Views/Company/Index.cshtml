@model IEnumerable<Company>
@{
    ViewData["Title"] = "Companies";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Companies List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Company
            </a>
        </div>
    </div>
</div>

<br />

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-border table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Company</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Id</td>
                    <td>@company.CompanyName</td>
                    <td>@(company.IsActive ? "Live" : "Disabled")</td>
                    <td class="text-end">
                        <div class="w-50 btn-group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id" class="btn btn-primary mx-2 w-50">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count() == 0)
    {
        <div>
            No results to display
        </div>
    }
</div>

