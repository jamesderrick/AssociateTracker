@model Placement
@{
    ViewData["Title"] = "Delete Placement";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Placement</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Company"></label>
            <input asp-for="Company" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Associate"></label>
            <input asp-for="Associate" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Placement" asp-action="Index" class="btn btn-secondary">
            Back To List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
