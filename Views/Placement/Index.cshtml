@model IEnumerable<Placement>
@{
    ViewData["Title"] = "Placements";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Placements</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Placement" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Placement
            </a>
        </div>
    </div>
</div>

<br />

<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Company</th>
            <th>Associate</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var placement in Model)
        {
            <tr>
                <td>@placement.Id</td>
                <td>@placement.Company.CompanyName</td>
                <td>@placement.Associate.FirstName @placement.Associate.LastName</td>
                <td>@placement.StartDate.Date.ToString("dd MMM yyyy")</td>
                <td>@placement.EndDate.Date.ToString("dd MMM yyyy")</td>
                <td class="text-end">
                    <div class="btn-group">
                        <a asp-controller="Placement" asp-action="Edit" asp-route-id="@placement.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Placement" asp-action="Delete" asp-route-id="@placement.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count() == 0)
{
    <div>
        No results to display
    </div>
}

